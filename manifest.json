{
  "manifest_version": 2,
  "name": "MediaSlideshow",
  "short_name": "MediaSlideshow",
  "description": "",
  "version": "0.0.3",
  "minimum_chrome_version": "38",
  "sandbox":true,
  "kiosk_enabled":true,
  "kiosk_only":false,

  "permissions":[
    "diagnostics",
    {"mediaGalleries": ["read", "write", "scan", "allAutoDetected"]},
      "power"
  ],

  "icons": {
    "16": "assets/icon_16.png",
    "128": "assets/icon_128.png"
  },

  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  }
}
